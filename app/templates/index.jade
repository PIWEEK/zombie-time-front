doctype html
html
  head
    title Zombie Time!
    link(rel="stylesheet", type="text/css", href="/assets/css/reset.css")
    link(rel="stylesheet", type="text/css", href="/assets/css/styles.css")

    script(src="/vendor/jquery/dist/jquery.min.js")
    script(src="/vendor/bluebird/js/browser/bluebird.min.js")
    script(src="/vendor/mousetrap/mousetrap.min.js")
    script(src="/vendor/ramda/dist/ramda.min.js")
    script(src="/vendor/moment/min/moment.min.js")
    script(src="/vendor/stomp-websocket/lib/stomp.min.js")
    script(src="/vendor/sockjs-client/dist/sockjs.min.js")
  body
    #content

    #top-left-interface.interface

    #top-right-interface.interface.clock

    #bottom-interface-wrapper.interface
      #bottom-interface.interface

    #help
      #help-content
        ul
          li i => Zoom In
          li o => Zoom Out
          li r => Reset Zoom and Position
          li h => Show this help dialog


    #choose-character

      #detail-character
        .detail.pablo#pablo
          h2 Pablo
          p Pablo es un badass.
        .detail.yami#yami
          h2 yami
          p  yami mola
        .detail.miguel#miguel
          h2 miguel
          p  miguel mola
        .detail.laura#laura
          h2 laura
          p  laura mola
        .detail.xenia#xenia
          h2 xenia
          p  xenia mola
        .detail.alex#alex
          h2 alex
          p  alex mola

        .want.leader ¡Me lo pido de líder!
        .want.follower ¡Me lo pido de seguidor!
        .want.ready ¡Estoy lista!

      #list-character
        ul
          li.miguel
          li.yami
          li.pablo
          li.xenia
          li.laura
          li.alex


    // Javascript
    script(src="/assets/js/transform.js")
    script(src="/assets/js/http.js")
    script(src="/assets/js/globals.js")
    script(src="/assets/js/stomp-connection.js")
