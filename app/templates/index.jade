doctype html
html
  head
    title Zombie Time!
    link(rel="stylesheet", type="text/css", href="/assets/css/reset.css")
    link(rel="stylesheet", type="text/css", href="/assets/css/styles.css")

    script(src="/vendor/jquery/dist/jquery.min.js")
    script(src="/vendor/bluebird/js/browser/bluebird.min.js")
    script(src="/vendor/mousetrap/mousetrap.min.js")
    script(src="/vendor/ramda/dist/ramda.min.js")
    script(src="/vendor/moment/min/moment.min.js")
    script(src="/vendor/stomp-websocket/lib/stomp.min.js")
    script(src="/vendor/sockjs-client/dist/sockjs.min.js")

  body
    #help
      #help-content
        ul
          li i => Zoom In
          li o => Zoom Out
          li r => Reset Zoom and Position
          li h => Show this help dialog

    #choose-character
      .selected-character
        div.title Choose your team!
        div.team
          div.leader(title="You start playing with the leader") Leader
            img.team-photo.photo-leader(src="/assets/imgs/survivors/empty.png")
          div.follower(title="If the leader dies, you continue playing with the follower") Follower
            img.team-photo(src="/assets/imgs/survivors/empty.png")
          div Drag your characters to the team
        div.photo-container
          img.photo
        div.info
          div.name
          div.description
        div.ready I'm ready!
      .list-character


    #end-game
      div.title Game Over
      div.main-mission
        .result
      div.personal-missions
        .title Personal missions:
        .result
      .again
        a(href="/") Play again?

    // canvas
    #content

    #top-left-interface.interface MISSIONS

    #top-right-interface.interface.clock

    .veil
    .lightbox
      #close-lb
      .inner-lb#animation-attack
        div.header
            div.survivor
            div.vs Vs
            div.zombie
        div.info Kill 6 zombies
      .inner-lb#find-item
        div.title You have found...
        div.content
            div.item1
             div.damage
             div.defense
             div.ammo
             div.image
            div.info1
                div.item-title
                div.item-description
                div.item-options
                    img.want(src="/assets/imgs/want.png")
                    //img.searchmore(src="/assets/imgs/searchmore.png")

      .inner-lb#zombie-time
        div.title ZOMBIE TIME!
        div.header
            div.survivors
            div.info
        div.newzombies
            img.zombie(src="/assets/imgs/survivors/zombie.png")
            div.text

      .inner-lb#zombie-attack
          div.header
                div.zombie
                div.vs Vs
                div.survivor
            div.info Does 6 damage
      .inner-lb#end-turn
        div.title Next turn!
        div.turn
      .inner-lb#goals
        div.title MISSIONS
        div.subtitle «To have missions in life is as important as remember them»
        #team-goals
          .title TEAM MISSION
          .content
        #own-goals
          .title PERSONAL MISSION
          .content

    #bottom-interface-wrapper.interface
      #bottom-interface.interface
        #user-profile.menu-element
          img
          div.life
            div.text 3
        #inventory.menu-element
           div.content
             div.item
             div.item
             div.item
             div.item
             div.item
             div.item

        #attack-button.menu-element(title='Attack')
          div.damage.damage.img
            div.text 3
          div.ammo
        #move-button.menu-element(title='Move')
        #search-button.menu-element(title='Search')
        #noise-button.menu-element(title='Make noise')
        #end-turn-button.menu-element(title='End turn')
            div.actions 3
        #partners
        #chat-button.menu-element(title='Chat')
      #bottom-interface-info
        #inventory-info
          div
            div.name
            div.data
                img.image
                div.characteristics
          div.description
          div.actions
        #log.small
        #chat
            div.chat-messages
            div
              form.chat-form
                input.chat-text



    audio#zt-audio(src="/assets/data/zombies.ogg")
    audio#zt-music(src="/assets/data/music.ogg")

    // Javascript
    script(src="/assets/js/transform.js")
    script(src="/assets/js/http.js")
    script(src="/assets/js/globals.js")
    script(src="/assets/js/stomp-connection.js")
    script(src="/assets/js/utils.js")
    script(src="/assets/js/sprite.js")
    script(src="/assets/js/interface.js")
    script(src="/assets/js/lightbox.js")
    script(src="/assets/js/canvas.js")
    script(src="/assets/js/map.js")
    script(src="/assets/js/game.js")
    script(src="/assets/js/main.js")
